            url: "/api/Register/",
            type: "post",
            data: datasd,
            success: function (response) {
                if (response === "true") {
                    swal({
                        title: "User Details Successfully Submited.",
                        text: "Thank you for connecting with us! We will contact you soon.",
                        type: "success"
                    }).then(function () {
                        location.href = "/login/index/";
                    });
                } else {
                    swal("Error", response, "error");
                }
            }
        });
    } else {
        swal("Error", "Please Enter Required Details.");
    }
}

