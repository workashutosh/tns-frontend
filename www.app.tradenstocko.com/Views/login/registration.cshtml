}

function verifyotp() {
    var otpCode = $("#txtbeforeotpenter").val();
    var verificationId = localStorage.getItem("trnID");

    if (!otpCode || !verificationId) {
        swal("Error", "Missing OTP or Verification ID.", "error");
        return;
    }

    $("#btnverbtn").html(
        `<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Verifying OTP...`
    );

    $.ajax({
        url: `https://cpaas.messagecentral.com/verification/v3/validateOtp?countryCode=91&mobileNumber=${$("#txtbeforeotp").val()}&verificationId=${verificationId}&customerId=C-769541B7B67C491&code=${otpCode}`,
        method: 'get',
        headers: {
            "authToken": "eyJhbGciOiJIUzUxMiJ9.eyJzdWIiOiJDLTc2OTU0MUI3QjY3QzQ5MSIsImlhdCI6MTc1MTUyODcxMiwiZXhwIjoxOTA5MjA4NzEyfQ.XFKN0L0h2hHkHvQNDibseOXhsI934FQyo2IKDKomg9TFOqwMOFccJLKOjwyBs4c0bOC_xBmxFNAyew5mSqmq9Q"
        },
        success: function (response) {
            if (response.responseCode === 200 && response.data.verificationStatus === "VERIFICATION_COMPLETED") {
                $("#btnverbtn").html(`Verify & Continue`);
                $("#txtmob").val($("#txtbeforeotp").val());
                $("#div3afterotp").css("display", "none");
                $("#div4afterotp").css("display", "none");
                for (i = 1; i < 15; i++) {
                    $("#div" + i + "userreg").css("display", "inline");
                }
                $("#tradingAccent").css("display", "flex");
            } else {
                $("#btnverbtn").html(`Verify & Continue`);
                swal("Error", "OTP verification failed.", "error");
            }
        },
        error: function (xhr) {
            $("#btnverbtn").html(`Verify & Continue`);
            swal("Error", "OTP verification failed: " + xhr.responseText, "error");
        }
    });
}

function save() {
    var txtfirstname = $("#txtfirstname").val();
    var txtlastname = $("#txtlastname").val();
