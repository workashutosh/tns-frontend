    <script>
        function generateRandomFourDigitNumber() {
            return Math.floor(1000 + Math.random() * 9000);
        }
        $(document).ready(function () {
            var url = window.location.hostname;
           


        });


        function goback() {
            location.href = "/login/index";
        }

        function sendotp() {

            var txtbeforeotp = $("#txtbeforeotp").val();
            const regex = /^(?:[6789]\d{9})$/; // Indian mobile number regex
            if (!regex.test(txtbeforeotp))
            {
                swal("Invalid Mobile Number", "Please enter a valid Indian mobile number.", "error");
                $(this).css('border-color', 'red');
                return;
            }
            else
            {
                $(this).css('border-color', 'green');
            }

            if (txtbeforeotp != "") {
                var datasend = { "mobileNumber": txtbeforeotp };
                $("#lgn").html(
                    `<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Sending OTP...`
                );
                $.ajax({
                    url: "/login/SendOtpSmsAsync",
                    type: "post",
                    data: datasend,
                    success: function (response) {
                        if (typeof response === "string")
                        {
                            response = JSON.parse(response);
                        }

                        if (response.responseCode === 200 && response.message === "SUCCESS")
                        {
                            $("#lgn").html(
                                `Send OTP`
                            );
                            localStorage.setItem("trnID", response.data.verificationId)

                            swal("Success", "OTP Sent Successfully.", "success");
                            $("#div1beforeotp").hide();
                            $("#div2beforeotp").hide();
                            $("#div3afterotp").show();
                            $("#div4afterotp").show();
                        } else {
                            swal("Error", "Failed to send OTP.", "error");
                        }
                    },
                    error: function () {
                        swal("Error", "Server error. Please try again later.", "error");
                    }
                });
            } else {
                swal("Error", "Please Enter Mobile No.", "error");
            }

        }


        function verifyotp() {
            var otpCode = $("#txtbeforeotpenter").val();
            var verificationId = localStorage.getItem("trnID"); // Assume you set this earlier after sending OTP

            if (!otpCode || !verificationId) {
                swal("Error", "Missing OTP or Verification ID.", "error");
                return;
            }

            $("#btnverbtn").html(
                `<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Verifying OTP...`
            );


            $.ajax({
                url: '/login/VerifyOtpAsync', // Change to match your actual route
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    verificationId: verificationId,
                    code: otpCode
                }),
                success: function (response) {

                    if (response.includes('"verificationStatus":"VERIFICATION_COMPLETED"'))
                    {
                        $("#btnverbtn").html(
                            `Verify & Continue`
                        );
                        $("#txtmob").val($("#txtbeforeotp").val());
                        $("#div3afterotp").css("display", "none");
                        $("#div4afterotp").css("display", "none");
                        for (i = 1; i < 15; i++) {
                            $("#div" + i + "userreg").css("display", "inline");
                        }
                    } else {
                        swal("Error", "OTP verification failed.", "error");
                    }
                },
                error: function (xhr) {
                    swal("Error", "OTP verification failed: " + xhr.responseText, "error");
                }
            });
        }

        function save() {
            var newpassword = $("#newpassword").val();
            var confirmnewpassword = $("#confirmnewpassword").val();
            if (newpassword.trim() != confirmnewpassword.trim())
            {
                swal({
                    title: "Confirm Password Not Matched.",
                    text: "Confirm Password Should Match With Your Password..",
                    type: "error"
                }).then(function () {
                });
                return;
            }
            var txtmob = $("#txtmob").val();
            $('#btnsubmituser').prop('disabled', true);
            $("#btnsubmituser").html(
                `<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Saving User...`
            );
            if ((confirmnewpassword.trim() !== ""))
            {
                var datasd = {
                    "password": confirmnewpassword,
                    "phoneno": txtmob,
                    };
                $.ajax({
                    url: "/login/changepassword/",
                    type: "post",
                    data: datasd,
                    success: function (response) {
                        if (response == "True") {
                            //
                            swal({
                                title: "User Password Changed Successfully.",
                                text: "You can now login in your account.",
                                type: "success"
                            }).then(function () {
                                location.href = "/login/index/";
                            });
                        }
                        else
                        {
                            $('#btnsubmituser').prop('disabled', false);
                            $("#btnsubmituser").html(
                                `Submit`
                            );
                            //$("#txtusernm").val("");
                            swal("Error", response, "error");
                        }
                    }
                });

            } else {
                swal("Error", "Please Enter Required Details.");
            }


        }

    </script>




