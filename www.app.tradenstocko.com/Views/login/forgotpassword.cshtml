    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: #000000;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow-x: hidden;
            margin: 0;
            padding: 0;
        }

        .main-login {
            width: 100%;
            position: relative;
            z-index: 1;
        }

        .contactfrm {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .forgot-password-card {
            background: #1a1a1a;
            border-radius: 16px;
            padding: 32px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            border: 1px solid #333333;
            max-width: 400px;
            width: 100%;
            margin: 20px;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .logo-container {
            text-align: center;
            margin-bottom: 32px;
        }

        .logo-container img {
            width: 60px;
            height: 60px;
            margin-bottom: 16px;
        }

        h3 {
            color: #ffffff;
            font-size: 28px;
            font-weight: 700;
            margin: 0 0 8px 0;
            text-align: center;
            line-height: 1.2;
        }

        .subtitle {
            color: #888888;
            font-size: 16px;
            text-align: center;
            margin-bottom: 32px;
            line-height: 1.4;
        }

        .form-control {
            background: #2a2a2a;
            border: 1px solid #404040;
            border-radius: 12px;
            color: #ffffff !important;
            font-size: 16px;
            font-weight: 400;
            transition: all 0.2s ease;
            outline: none;
            margin-bottom: 16px;
            padding: 16px 20px;
            box-sizing: border-box;
        }

        .form-control:focus {
            background: #2a2a2a;
            border-color: #22c55e;
            box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.1);
        }

        .form-control::placeholder {
            color: #888888;
            font-weight: 400;
        }

        .login-btn {
            background: #22c55e;
            border: none;
            border-radius: 12px;
            color: #ffffff !important;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            text-transform: none;
            letter-spacing: 0;
            text-decoration: none;
            display: block;
            text-align: center;
            padding: 16px 20px;
            margin-bottom: 16px;
        }

        .login-btn:hover {
            background: #16a34a;
        }

        .login-btn:active {
            transform: scale(0.98);
        }

        .classhide {
            display: none;
            visibility: hidden;
        }

        .classhow {
            display: inline;
            visibility: visible;
        }

        .spinner-border {
            display: inline-block;
            width: 1rem;
            height: 1rem;
            vertical-align: text-bottom;
            border: 0.2em solid currentColor;
            border-right-color: transparent;
            border-radius: 50%;
            animation: spinner-border 0.75s linear infinite;
        }

        @@keyframes spinner-border {
            to { transform: rotate(360deg); }
        }

        .spinner-border-sm {
            width: 0.875rem;
            height: 0.875rem;
            border-width: 0.15em;
        }

        @@media (max-width: 768px) {
            .forgot-password-card {
                padding: 32px 24px;
                margin: 16px;
                border-radius: 20px;
            }

            h3 {
                font-size: 24px;
            }

            .logo-container img {
                width: 70px;
                height: 70px;
            }

            .form-control {
                padding: 14px 18px;
                font-size: 16px;
            }

            .login-btn {
                padding: 14px 20px;
                font-size: 15px;
            }
        }

        @@media (max-width: 480px) {
            .forgot-password-card {
                padding: 24px 20px;
                margin: 12px;
            }

            h3 {
                font-size: 22px;
            }

            .logo-container img {
                width: 60px;
                height: 60px;
            }
        }
    </style>
</head>
<body class="crm_body_bg" style="background-image: linear-gradient(90deg, #f4f4f4, #fff);">

